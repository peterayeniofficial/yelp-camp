<% include ../partials/header %>
<main class="main-content">
    <section class="section">
        <div class="container">
            <header class="section-header">
                <h1 class="display-4">Create a new Campground</h1>
                <hr>
                <p class="lead">All feeds are compulsory</p>
            </header>
           
            <div class="row">
                <div class="col-12 col-md-6 mx-auto">
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input class="form-control form-control-lg" type="text" placeholder="Name" name="name">
                        </div>
                        <div class="form-group">
                            <input class="form-control form-control-lg" type="text" placeholder="Image Url" name="image">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" rows="4" placeholder="Comment" name="description"></textarea>
                        </div>
                        <button class="btn btn-primary btn-block">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

</main>
<% include ../partials/footer %>
