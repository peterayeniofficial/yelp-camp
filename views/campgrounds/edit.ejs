<% include ../partials/header %>
<main class="main-content">
    <section class="section">
        <div class="container">
            <header class="section-header">
                <h1 class="display-4">Edit <%= campground.name %></h1>
            </header>
           
            <div class="row">
                <div class="col-12 col-md-6 mx-auto">
                    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control form-control-lg" type="text" value="<%= campground.name %>" name="campground[name]">
                        </div>
                        <div class="form-group">
                            <input class="form-control form-control-lg" type="text" value="<%= campground.image %>" name="campground[image]">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" rows="4" name="campground[description]"><%= campground.description %></textarea>
                        </div>
                        <button class="btn btn-success btn-block">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

</main>
<% include ../partials/footer %>
