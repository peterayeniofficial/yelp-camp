<% include ../partials/header %>
<main class="main-content">
    <section class="section">
        <div class="container">
            <header class="section-header">
                <h1 class="display-4">Create a new Comment to <%= campground.name %></h1>
                <hr>
                <p class="lead">All feeds are compulsory</p>
            </header>
           
            <div class="row">
                <div class="col-12 col-md-6 mx-auto">
                    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                       
                        <div class="form-group">
                            <textarea class="form-control" rows="4" placeholder="Comment" name="comment[text]"></textarea>
                        </div>
                        <button class="btn btn-xl btn-success">Submit</button>
                    </form>
                </div>
            </div>
          
        </div>
    </section>

</main>
<% include ../partials/footer %>
