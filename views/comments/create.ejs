<% include ../partials/header %>
<main class="main-content">
    <section class="section">
        <div class="container">
            <header class="section-header">
                <h1 class="display-4">Create a new Comment to <%= campground.name %></h1>
                <hr>
                <p class="lead">All feeds are compulsory</p>
            </header>
           
            <div class="row gap-y">
                <div class="col-md-6">
                    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                        <div class="form-group">
                            <input class="form-control form-control-lg" type="text" placeholder="Author" name="comment[author]">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" rows="4" placeholder="Comment" name="comment[text]"></textarea>
                        </div>
                        <button class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            <a href="/campgrounds">Campgrounds</a>
        </div>
    </section>

</main>
<% include ../partials/footer %>
